########### These MUST be filled in for a storm configuration
storm.zookeeper.servers:
<% @zookeepers.each do |zk| %>
      - "<%= zk %>"
<% end %>
# 
storm.local.hostname: "<%= @hostname %>"
nimbus.host: "<%= @nimbus %>"
storm.local.dir: "<%= @node[:storm][:local_dir] %>"
worker.childopts: "<%= @node[:storm][:worker][:childopts] %>"
storm.zookeeper.root: "<%= @node[:storm][:zookeeper][:root] %>"
supervisor.childopts: "<%= @node[:storm][:supervisor][:childopts] %>"
supervisor.slots.ports:
<% node[:storm][:supervisor][:workers].times do |i| %>
    - <%= 6700 + i %>
<% end %>
#
drpc.servers:
<% @drpc_hosts.each do |h| %>
      - "<%= h %>"
<% end %>
#
storm.messaging.netty.max_retries: <%= @node[:storm][:netty][:max_retries] %>
nimbus.thrift.max_buffer_size: <%= @node[:storm][:nimbus][:thrift_max_buffer_size] %>
